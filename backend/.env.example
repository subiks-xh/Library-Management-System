# Enhanced Backend Environment Configuration
# Copy this to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=5001
HOST=localhost
CLIENT_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tn_college_library_enhanced
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_chars_long
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=1

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
FILE_UPLOAD_PATH=./uploads
QUESTION_PAPERS_PATH=./uploads/question-papers

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=
SMTP_PASSWORD=
FROM_NAME=TN College Library
FROM_EMAIL=noreply@library.edu.in

# Card Scanner Configuration (for future hardware integration)
CARD_SCANNER_API_URL=http://localhost:8080
CARD_SCANNER_SECRET=your_scanner_secret_key

# Real-time Updates
WEBSOCKET_PORT=5002
ENABLE_REAL_TIME_UPDATES=true

# Library Configuration
LIBRARY_NAME=Tamil Nadu College Library
LIBRARY_CAPACITY=200
COMPUTER_LAB_CAPACITY=22
STUDY_ROOMS_COUNT=4

# Booking Configuration
MAX_BOOKING_DURATION=8
ADVANCE_BOOKING_DAYS=7
CANCELLATION_HOURS=1

# Analytics & Reporting
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Library Settings
DEFAULT_ISSUE_DAYS=14
DEFAULT_FINE_PER_DAY=1.00
MAX_BOOKS_PER_STUDENT=3